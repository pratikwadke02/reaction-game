      function checkDisplacement() {
        let choice = document.getElementsByClassName("choice");
        var reactant1 = choice[0].children;
        var reactant2 = choice[1].children;
        console.log(choice);
        try {
          if (
            reactant1[0].className == "potassium" &&
            reactant1[1].className == "oxygen" &&
