        $.ajax({
          url: `/v1/hint`,
          method: "get",
          async: false,
          data: queryData,
          success: (result, status, xhr) => {
            console.log(hintNum);
            if (hintNum == 1) {
              // console.log(result.data[0].hint1);
              hint(result.data[0].hint1);
              hintOpen = true;
              hintNum++;
            } else {
              hintNum = 1;
              hint(result.data[0].hint2);
            }
          },
          error: (e) => {
