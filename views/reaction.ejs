              var atom = product[j];
              if (choices[i][j].className == atom.atom) {
                count++;
              }
            }
          }
          if (count == totalcount) {
            $("#myModal").modal("show");
          } else {
            console.log("error");
            errorMessage("Oops! Please try again.");
            var errorText = "Oops! Please try again.";
            var hintText =
