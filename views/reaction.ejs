    <script>
      var hintNum = 1;
      var headers = window.location.href.split("/");
      console.log(headers);
      var headerLength = headers.length;
      var reactionId = headers[headerLength - 2];
      var reactionType = headers[headerLength - 1];
      console.log(reactionType);
      var products;
