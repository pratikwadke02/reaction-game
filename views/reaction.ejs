                `;
                }
                $("#reactant-three").html(reactantThreehtml);
              }
            }
            let productData = result.data[0].product;
            let productDataLength = productData.length;
            let producthtml = "";
            for (let i = 0; i < productDataLength; i++) {
              producthtml += `
                <div class="choice displacement-choice flex"></div>
                `;
            }
            $("#products-container").html(producthtml);
          },
          error: (e) => {
            console.log(e);
          },
        });
      }
      getReaction();
      var p = document.getElementsByTagName("p");
      for (var i of p) {
        i.addEventListener("dragstart", dragStart);
        i.addEventListener("dragend", dragEnd);
      }

      var choice = document.getElementsByClassName("choice");

      var dragItem = null;

      function dragStart() {
        dragItem = this;
        console.log(dragItem);
        setTimeout(() => (this.style.display = "none"), 0);
      }

      function dragEnd() {
        setTimeout(() => (this.style.display = "block"), 0);
        dragItem = null;
      }

      for (j of choice) {
        j.addEventListener("dragover", dragOver);
        j.addEventListener("dragenter", dragEnter);
        j.addEventListener("dragleave", dragLeave);
        j.addEventListener("drop", Drop);
      }

      function Drop() {
        this.append(dragItem);
      }

      function dragOver(e) {
        e.preventDefault();
        this.style.border = "2px dotted red";
      }

      function dragEnter(e) {
        e.preventDefault();
      }

      function dragLeave() {
        this.style.border = "none";
      }

      function check() {
        console.log(products);
        let choice = document.getElementsByClassName("choice");
        let choices = [];
